<h2>Create a new drone</h2>

<form action="/drones/create" method="POST">
  {{! action and method cannot be forgotten! }}
  <div>
    <label>
      {{! we need the value attribute to pre fill the fields in the form }}
      Name:
      <input type="text" name="name" value="{{name}}" />
    </label>
    <br />
    <label>
      Propellers:
      <input
        type="number"
        name="propellers"
        min="1"
        max="12"
        value="{{propellers}}"
      />
    </label>
    <br />
    <label>
      Max Speed:
      <input
        type="number"
        min="10"
        max="50"
        name="maxSpeed"
        value="{{maxSpeed}}"
      />
    </label>
    <br />

    <button type="submit"> Save ðŸ’¾ </button>
  </div>
</form>

{{!
    name: String,
    propellers: Number,
    maxSpeed: Number
});
 }}